<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.media.MediaView?>

<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Slider?>
<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="dk.easv.privatemoviecollection.gui.VideoPlayerController">
   <children>
       <BorderPane>
           <center>
               <VBox alignment="CENTER" spacing="10">

      <MediaView fx:id="mediaView"/>

                   <HBox alignment="CENTER" spacing="10">
               <Button fx:id="btnPlay" onAction="#TogglePlayPause" text="Pause" />
                   <Slider fx:id="seekSlider" min="0" max="100" value="0" prefWidth="300"/>
                   </HBox>
               </VBox>
           </center>

       </BorderPane>
   </children>
</AnchorPane>
