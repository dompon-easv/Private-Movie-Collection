<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefWidth="320" prefHeight="200"
            xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="dk.easv.privatemoviecollection.gui.AddCategoryController">

    <children>
        <VBox spacing="15"
              alignment="CENTER"
              styleClass="card"
              AnchorPane.topAnchor="0"
              AnchorPane.bottomAnchor="0"
              AnchorPane.leftAnchor="0"
              AnchorPane.rightAnchor="0">

            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>

            <Label text="New category / genre" styleClass="title"/>

            <TextField fx:id="txtNewCategory"
                       promptText="Category name"
                       maxWidth="250"/>

            <HBox spacing="10" alignment="CENTER">
                <Button text="Cancel"
                        onAction="#onClickCancel"
                        styleClass="secondary"/>

                <Button text="OK"
                        onAction="#onClickAddCategory"/>
            </HBox>

        </VBox>
    </children>
</AnchorPane>
