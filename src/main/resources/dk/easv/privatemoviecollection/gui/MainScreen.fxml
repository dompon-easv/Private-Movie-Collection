<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.collections.FXCollections?>
<?import java.lang.Integer?>

<AnchorPane prefHeight="500.0"
            prefWidth="783.0"
            xmlns="http://javafx.com/javafx/24.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="dk.easv.privatemoviecollection.gui.MainScreenController">

    <children>

        <!-- TOP BAR -->
        <VBox prefHeight="26.0"
              prefWidth="783.0"
              styleClass="top-bar"/>

        <!-- MAIN CONTENT -->
        <VBox layoutY="26.0"
              prefHeight="472.0"
              prefWidth="783.0">

            <children>
                <HBox prefHeight="472.0"
                      prefWidth="783.0">

                    <children>

                        <!-- ================= CATEGORIES ================= -->
                        <HBox prefHeight="472.0"
                              prefWidth="300.0">

                            <children>
                                <AnchorPane prefHeight="472.0"
                                            prefWidth="310.0">

                                    <children>
                                        <Label layoutX="14.0"
                                               layoutY="2.0"
                                               text="Categories"
                                               styleClass="section-title"/>

                                        <TableView fx:id="tblCategories"
                                                   layoutX="14.0"
                                                   layoutY="36.0"
                                                   prefHeight="421.0"
                                                   prefWidth="276.0">
                                            <columns>
                                                <TableColumn fx:id="colCategory"
                                                             prefWidth="275.0"
                                                             text="Movie genres"/>
                                            </columns>
                                        </TableView>
                                    </children>
                                </AnchorPane>
                            </children>
                        </HBox>

                        <!-- ================= MOVIES ================= -->
                        <HBox prefHeight="472.0"
                              prefWidth="303.0">

                            <children>
                                <AnchorPane prefHeight="472.0"
                                            prefWidth="329.0">

                                    <children>
                                        <Label layoutX="14.0"
                                               layoutY="6.0"
                                               text="Movies"
                                               styleClass="section-title"/>

                                        <TableView fx:id="tblMovies"
                                                   layoutX="14.0"
                                                   layoutY="36.0"
                                                   prefHeight="421.0"
                                                   prefWidth="276.0">
                                            <columns>
                                                <TableColumn fx:id="colTitle"
                                                             prefWidth="133.0"
                                                             text="Title"/>
                                                <TableColumn fx:id="colImdbRating"
                                                             prefWidth="74.0"
                                                             text="IMDB rating"/>
                                                <TableColumn fx:id="colMyRating"
                                                             prefWidth="68.0"
                                                             text="Your rating"/>
                                            </columns>
                                        </TableView>
                                    </children>
                                </AnchorPane>
                            </children>
                        </HBox>

                        <!-- ================= ACTION PANEL ================= -->
                        <AnchorPane prefHeight="472.0"
                                    prefWidth="200.0">

                            <children>

                                <TextField fx:id="txtFilter"
                                           layoutX="14.0"
                                           layoutY="8.0"
                                           prefWidth="156.0"
                                           promptText="Filter movies/categories"/>

                                <Button layoutX="14.0"
                                        layoutY="67.0"
                                        prefWidth="156.0"
                                        text="New Category"
                                        onAction="#onClickNewCategory"/>

                                <Button layoutX="14.0"
                                        layoutY="105.0"
                                        prefWidth="156.0"
                                        text="Delete Category"
                                        onAction="#onClickDeleteCategory"/>

                                <Button layoutX="14.0"
                                        layoutY="142.0"
                                        prefWidth="156.0"
                                        text="Add Movie"
                                        onAction="#onClickAddMovie"/>

                                <Button layoutX="14.0"
                                        layoutY="178.0"
                                        prefWidth="156.0"
                                        text="Delete Movie"
                                        onAction="#onClickDeleteMovie"/>

                                <Button layoutX="14.0"
                                        layoutY="217.0"
                                        prefWidth="156.0"
                                        text="Edit Movie Details"
                                        onAction="#onClickEditMovie"/>

                                <Button layoutX="14.0"
                                        layoutY="254.0"
                                        prefWidth="156.0"
                                        text="Open in App"
                                        onAction="#onClickOpenInApp"/>

                                <Button layoutX="14.0"
                                        layoutY="291.0"
                                        prefWidth="156.0"
                                        text="Play"
                                        onAction="#onClickPlay"/>

                                <Label layoutX="14.0"
                                       layoutY="331.0"
                                       text="Min IMDB Rating:"/>

                                <ChoiceBox fx:id="ratingDropdown"
                                           layoutX="126.0"
                                           layoutY="326.0"
                                           prefWidth="44.0">
                                    <items>
                                        <FXCollections fx:factory="observableArrayList">
                                            <Integer fx:value="1"/>
                                            <Integer fx:value="2"/>
                                            <Integer fx:value="3"/>
                                            <Integer fx:value="4"/>
                                            <Integer fx:value="5"/>
                                            <Integer fx:value="6"/>
                                            <Integer fx:value="7"/>
                                            <Integer fx:value="8"/>
                                            <Integer fx:value="9"/>
                                            <Integer fx:value="10"/>
                                        </FXCollections>
                                    </items>
                                </ChoiceBox>

                                <Button layoutX="14.0"
                                        layoutY="432.0"
                                        text="Show all"
                                        onAction="#showAllMovies"/>

                            </children>
                        </AnchorPane>

                    </children>
                </HBox>
            </children>
        </VBox>
    </children>
</AnchorPane>
